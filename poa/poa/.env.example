# Proof-of-Art Network - Environment Variables

# Network Configuration
CHAIN_ID=31337
NETWORK_NAME="Proof-of-Art Network"

# Cloud RPC URLs (for cloud deployment)
CLOUD_RPC_URL=https://your-domain.com:8545
CLOUD_WS_URL=wss://your-domain.com:8546

# Deployment Configuration
INITIAL_SUPPLY=1000000
PRIVATE_KEY=your_private_key_here

# Block Explorer (optional)
EXPLORER_URL=https://your-domain.com

# Security (optional - for authenticated RPC)
RPC_AUTH_ENABLED=false
RPC_AUTH_USERNAME=admin
RPC_AUTH_PASSWORD=secure_password_here

# Monitoring (optional)
ENABLE_MONITORING=false
SENTRY_DSN=

# Node Configuration
NODE_ENV=production
